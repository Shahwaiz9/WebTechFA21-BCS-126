<div class="px-4 py-5 my-5 text-center">
    <h1 class="display-5 fw-bold">Edit Recipe</h1>
    
  </div>
  

  



  <div class="row justify-content-center">

 
    
    
    <div class="col-8">
  
      <form action="/edit-recipe/<%= id %>" enctype="multipart/form-data" method="POST">
      
        <div class="row g-3">
  
         <% if(name2!='') {%>
            <h1><%- name2 %></h1>
            <% } %>
  
          <div class="col-12">
            <label for="name" class="form-label">Recipe Name:</label>
            <input type="text" name="name" id="name" class="inpbar" required>
          </div>
          
          <div class="col-12 d-flex">
            <label for="description" class="form-label">Description:</label>
            
            <textarea name="description" id="description" class="inpbar" ></textarea>
          </div>
  
          <div class="col-12 d-flex">
            <label for="name" class="form-label">Ingredients:</label><br>
            
            <div class="ingredientList">
              <div class="ingredeintDiv">
                <input type="text" name="ingredients" class="inpbar ing" >
              </div>
            </div>
          </div>
  
          <div class="col-12 ingbut">
            <button type="button" class="btn" id="addIngredientsBtn">+ Ingredient</button>
          </div>
  
          <div class="col-12 catdivsub">
            <label for="category">Select Category:</label>
            <select  id="sel" class="inpbar" name="category" aria-label="Category">
              <option selected>Select Category</option>
              <option value="Thai">Thai</option>
              <option value="American">American</option>
              <option value="Chinese">Chinese</option>
              <option value="Mexican">Mexican</option>
              <option value="Pakistani">Pakistani</option>
            </select>
          </div>
  
          <div class="col-12" id="prodimgd">
            <label for="image" id="prodl">Product Image:</label>
            <input type="file" class="inpbar" name="image" accept="image/*">
          </div>

            <div class="col-12" id="subd">
                <button type="submit" class="btn" id="subbut2">Submit Recipe</button>
              </div>
        
        </div>
      
      </form>
  
    </div>
  </div>