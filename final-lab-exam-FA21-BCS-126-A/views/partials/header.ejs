<body>
        
    <div id="header1">
        <a href="/" class="" id="anchorhead">
            <img src="/img/titleicon.png" width="50" alt="Cookbook Community" id="cookbookimg">
            <p id="titletext">Cookbook Community</p>
        </a>
        <div id="navdiv">
            <ul>
                <li><a href="/" class="">Home</a></li>
                <li><a href="/categories" class=" ">Categories</a></li>
                <li><a href="/submit-recipe"  id="subhead1" class="">Submit Recipe</a></li>
                <li><a href="/contact" class="">Contact</a></li>
                <li>
                    <div id="dropbar" class="dropdown">
                        <div class="bardivs"></div>
                        <div class="bardivs"></div>
                        <div class="bardivs"></div>
                        <div class="dropdown-content">
                            <% if(adminbool==false){ %>
                            <% if(logbool==false) {%>
                            <a href="/log-in" class="loga"><p>Login</p></a>
                            <a href="/sign-in" class="loga"><p>SignUp</p></a>
                            <a href="/admin-log-in" class="loga"><p>Admin</p></a>
                            <% } else{ %>
                                <a href="/visited-products" class="loga"><p>Visited</p></a>
                                <a href="/log-out" class="loga"><p>Logout</p></a>
                                <% } %>
                            <%  }else if(adminbool==true){ %>
                                <a href="/admin" class="loga"><p>Dashboard</p></a>
                                <a href="/admin-log-out" class="loga"><p>Logout</p></a>
                                
                            <% } %>
                        </div>
                    </div>
                </li>
            </ul>
        </div>
        <div class="col-md-3 text-end" id="formdiv">
            <form method="POST" action="/search" id="form1">
                <input type="search" name="searchTerm" class="form-control" placeholder="Search..." aria-label="Search" id="searchbar">
            </form>
        </div>
    </div>
<script>
    document.addEventListener('DOMContentLoaded', (event) => {
    const dropbar = document.getElementById('dropbar');
    const dropdownContent = dropbar.querySelector('.dropdown-content');

    dropbar.addEventListener('click', () => {
        dropdownContent.classList.toggle('show');
    });

    window.addEventListener('click', (event) => {
        if (!dropbar.contains(event.target)) {
            dropdownContent.classList.remove('show');
        }
    });
});

</script>    
       
    
    
    
    
    
